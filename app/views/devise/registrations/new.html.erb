  <div class="mask d-flex align-items-center h-100 gradient-custom-3 mb-6">
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-9 col-lg-7 col-xl-6">
          <div class="card text" style="border-radius: 15px;">
            <div class="card-body p-5">
              <h2 class="text-uppercase text-center mb-5">Sign up</h2>

              <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form' }) do |f| %>
                <%= f.error_notification %>

                <div class="form-outline mb-4">
                  <%= f.input :first_name,
                              required: false,
                              autofocus: true,
                              input_html: { autocomplete: "First Name", class: 'form-control form-control-lg' } %>
                </div>

                <div class="form-outline mb-4">
                  <%= f.input :last_name,
                              required: false,
                              autofocus: true,
                              input_html: { autocomplete: "Last Name", class: 'form-control form-control-lg' } %>
                </div>

                <div class="form-outline mb-4">
                  <%= f.input :username,
                              required: true,
                              autofocus: true,
                              input_html: { autocomplete: "Nickname", class: 'form-control form-control-lg' } %>
                </div>

                <div class="form-outline mb-4">
                  <%= f.input :email,
                              required: true,
                              autofocus: true,
                              input_html: { autocomplete: "email", class: 'form-control form-control-lg' } %>
                </div>

                <div class="form-outline mb-4">
                  <%= f.input :password,
                              required: true,
                              hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                              input_html: { autocomplete: "new-password", class: 'form-control form-control-lg' } %>
                </div>

                <div class="form-outline mb-4">
                  <%= f.input :password_confirmation,
                              required: true,
                              input_html: { autocomplete: "new-password", class: 'form-control form-control-lg' } %>
                </div>

                <div class="d-flex justify-content-center">
                  <%= f.button :submit, "Sign up", class: 'btn btn-outline-light btn-block btn-lg fw-bold' %>
                </div>
              <% end %>
                <div>
                <p class="text-center mt-4">Already have an account? <a href="<%= new_user_session_path %>" class="text-50 fw-bold">Log in</a></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

