  <div class="container py-5 h-100 mb-4">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">

            <div class="mb-md-5 mt-md-4 pb-5">

              <h2 class="fw-bold mb-2 text-uppercase">Log in</h2>
              <p class="text-50 mb-5">Please enter your login and password!</p>

              <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="form-outline form mb-4">
                  <%= f.input :email,
                              required: false,
                              autofocus: true,
                              input_html: { autocomplete: "email" },
                              label: "Email" %>
                </div>

                <div class="form-outline form mb-4">
                  <%= f.input :password,
                              required: false,
                              input_html: { autocomplete: "current-password" },
                              label: "Password" %>
                </div>

                <p class="small mb-5 pb-lg-2"><a class="text-50" href="#!">Forgot password?</a></p>

                <div class="d-flex justify-content-center">
                  <%= f.button :submit, "Log in", class: "btn btn-outline-primary btn-lg px-5" %>
                </div>
              <% end %>

              <div>
                <p class="mb-0">Don't have an account? <a href="<%= new_user_registration_path %>" class="text-50 fw-bold">Sign Up</a></p>
              </div>

            </div>

            <div class="d-flex justify-content-center text-center mt-4 pt-1">
              <a href="#!" class="text"><i class="fab fa-facebook-f fa-lg"></i></a>
              <a href="#!" class="text"><i class="fab fa-twitter fa-lg mx-4 px-2"></i></a>
              <a href="#!" class="text"><i class="fab fa-google fa-lg"></i></a>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
